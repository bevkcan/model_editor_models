material roads
{
  technique
  {
    pass
    {
      texture_unit
      {
        // Relative to the location of the material script
        texture ../textures/roadtex2.png
        filtering anistropic
        max_anisotropy 30
        // Repeat the texture over the surface (4 per face)
        scale 1 1
      }
    }
  }
} 
